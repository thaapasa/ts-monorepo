{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "src",
    "__tests__"
  ],
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
